!!! XML
!!! Strict

%html
  %head
    %title PhotoView
    %meta{:"http-equiv" => "Content-Type", :comment => "text/html", :charset => "utf-8"}
    - @styles.each do |style|
      %link{:rel => "stylesheet", :type => "text/css", :href => "/#{style}.css"}
    %link{:rel => "stylesheet", :type => "text/css", :href => "/lib/jstree/themes/default/style.min.css"}
    %script{:type => "text/javascript", :src => "/lib/js/jquery-1.11.3.min.js"}
    %script{:type => "text/javascript", :src => "/lib/jstree/jstree.min.js"}
    :javascript
      $(document).ready(function() { $('#tree').jstree(); });


  %body
    %div#container
      %div#header
        %h1
          %a{:href => "/"} PhotoView
      %div#content
        != yield
      %div#footer
        = "PhotoView v#{PV_VERSION}"
